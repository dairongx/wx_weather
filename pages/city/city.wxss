.cityList .del {
  position: absolute;
  top: 0;
  right: -80px;
  width: 80px;
  text-align: center;
  font-size: 38rpx;
  line-height: 120rpx;
  background-color: #ef4f4f;
  color: #fff;
}

.cityList .del.disable {
  background-color: #ccc;
}

.btn_add {
  width: 90%;
  font-size: 38rpx;
  background-color: #f96b29;
  color: #fff;
  margin: 120rpx auto 0;
}
