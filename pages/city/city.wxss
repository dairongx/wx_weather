/* pages/addCity/addCity.wxss */

.addCity {
  width: 100vw;
  height: 98vh;
  padding-top: 2vh;
  overflow: hidden;
}

.cityList {
  position: relative;
  width: 98vw;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 2vw;
  border-top: 1px solid #e2e2e2;
  transition: all .5 ease;
}

.cityList:last-child {
  border-bottom: 1px solid #e2e2e2;
}

