/**index.wxss**/

.index {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-image: linear-gradient(#50b4e6, #339ee6);
  color: #fff;
}

/*晴  */

.bg1 {
  background-image: linear-gradient(#50b4e6, #339ee6);
}

/*雨  */

.bg2 {
  background-image: linear-gradient(#131c23, #315f80);
}

/*阴  */

.bg3 {
  background-image: linear-gradient(#495865, #a0b7c9);
}

.index_top {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}

.index_top view {
  position: absolute;
  top: 0;
  text-align: center;
  height: 100rpx;
}

.index_top view:nth-child(1) {
  width: 80rpx;
  left: 20rpx;
  text-align: center;
}

.index_top view:nth-child(2) {
  left: 50%;
  transform: translateX(-50%);
}

.index_top view:nth-child(3) {
  width: 80rpx;
  top: -2rpx;
  right: 38rpx;
  text-align: center;
  font-size: 36rpx;
}

.index .dots {
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  z-index: 99;
}

.dots .dot {
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #fff;
  margin: 0 3rpx;
}

.dots .dot.on {
  width: 25rpx;
  background-color: #f96b29;
}

.main {
  width: 100vw;
  height: calc(100vh - 100rpx);
  text-align: center;
}

.main swiper, .main swiper-item, .main scroll-view {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.weatherDesc {
  position: relative;
  top: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.weatherDesc text {
  position: absolute;
  top: 0;
  height: 80rpx;
  color: rgba(255, 255, 255, 0.8);
}

.weatherDesc text:nth-child(1) {
  left: 50%;
  transform: translateX(-50%);
}

.weatherDesc text:nth-child(2) {
  right: 30rpx;
  font-size: 28rpx;
}

.temperature {
  line-height: 150rpx;
  font-size: 68rpx;
  padding: 30rpx 0;
}

.pm25 text {
  display: inline-block;
  padding: 6rpx 25rpx;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 30rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
}

.originalData {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 70rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.originalData .date {
  flex: 1;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

.originalData .date image {
  width: 60rpx;
  margin: 0 3rpx;
}

.originalData .date view:nth-child(1) {
  line-height: 60rpx;
}

.originalData .date view:nth-child(2) {
  display: flex;
  justify-content: center;
  align-items: center;
}

.originalData .date view:nth-child(3), .originalData .date view:nth-child(5) {
  display: flex;
  width: 80%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  font-size: 28rpx;
}

.originalData .date view:nth-child(4) {
  font-size: 28rpx;
}

.pt {
  width: 100%;
  font-size: 30rpx;
}

.pt .pttitle {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
}

.pt_main {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.pt_main .pt_left {
  width: 180rpx;
}

.pt_main .pt_right {
  flex: 1;
  padding-right: 30rpx;
  text-align: left;
}

.pt_main .pt_right view:nth-child(1) {
  font-size: 30rpx;
}

.pt_main .pt_right view:nth-child(1) text {
  padding-right: 50rpx;
}

.pt_main .pt_right view:nth-child(2) {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.map {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 30rpx 0;
}

.pt .icon-chuanyizhishu {
  font-size: 60rpx;
}

.pt .icon-xichezhishu {
  font-size: 66rpx;
}

.pt .icon-ganmaozhishu {
  font-size: 60rpx;
}

.pt .icon-yundongzhishu {
  font-size: 60rpx;
}

.pt .icon-fangshaizhishu {
  font-size: 70rpx;
}

.wrap {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
  transform: translateX(-100%);
  opacity: 0;
}

.wrap .left_menu {
  width: 70vw;
  height: 100vh;
  background-color: #fff;
  color: #333;
}

.wrap .menu_top {
  width: 100%;
  height: 35vh;
  overflow: hidden;
}

.wrap .menu_top image {
  width: 100%;
  height: 100%;
}

.menu_list>view {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #e2e2e2;
}

.menu_list>view text:first-child {
  margin-right: 10rpx;
}

.search {
  position: fixed;
  top: 100vh;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  background-color: #fff;
  transition: all 0.3s;
  color: #333;
  font-size: 36rpx;
  overflow: hidden;
  z-index: 999;
}

.search.on {
  top: 0;
  opacity: 1;
}

.searchInput {
  position: relative;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 0;
}

.searchInput input {
  padding-left: 20rpx;
  border-bottom: 1px solid #e2e2e2;
}

.searchInput text {
  position: absolute;
  right: 50rpx;
  top: 30rpx;
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  z-index: 1000;
}

.searchList {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.searchList>text {
  display: block;
  padding: 0 30rpx;
  margin: 0 30rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 28rpx;
  color: #666;
  border: 1px solid #e2e2e2;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}

.clear {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  color: #333;
  font-size: 30rpx;
  margin-top: 25rpx;
  border: 0;
}

.clear text {
  display: inline-block;
  padding: 0 50rpx;
  border: 1px solid #e2e2e2;
  border-radius: 5rpx;
}

.search_weather {
  position: fixed;
  top: -100vh;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  color: #fff;
  font-size: 36rpx;
  transition: all 0.3s;
  text-align: center;
  background-image: linear-gradient(#50b4e6, #339ee6);
  z-index: 999;
}

.search_weather.on {
  top: 0;
}
.search_top{
  width: 100%;
  height: 100rpx;
}
.search_top text:first-child{
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 80rpx;
  height: 100rpx;
}
.search_weather scroll-view{
  width: 100vw;
  height: calc(100vh - 100rpx);
  overflow: hidden;
}

.search_top {
  line-height: 100rpx;
  text-align: center;
}
